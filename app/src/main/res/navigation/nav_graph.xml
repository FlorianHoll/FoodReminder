<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/foodItemListFragment">

    <fragment
        android:id="@+id/foodItemListFragment"
        android:name="com.example.foodreminderapp.FoodItemListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_item_list">
        <argument
            android:name="itemListName"
            app:argType="string" />
        <argument
            android:name="itemListDaysLeft"
            app:argType="string" />
        <argument
            android:name="itemListLocation"
            app:argType="string" />
        <argument
            android:name="itemListEdited"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="itemListNewItemAdded"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="itemListPosition"
            app:argType="integer" />
        <action
            android:id="@+id/action_listFragment_to_createEditFragment"
            app:destination="@id/createEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/createEditFragment"
        android:name="com.example.foodreminderapp.CreateEditItemFragment"
        android:label="@string/createEditTitle"
        tools:layout="@layout/fragment_create_edit_item">
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="days"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="location"
            app:argType="string"
            android:defaultValue="KÃ¼hlschrank" />
        <argument
            android:name="position"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="edited"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_createEditFragment_to_listFragment"
            app:destination="@id/foodItemListFragment" />
    </fragment>

</navigation>
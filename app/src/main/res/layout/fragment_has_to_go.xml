<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HasToGoFragment"
    android:padding="5dp">

    <!-- Card for fridge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/items_fridge_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/items_shelf_card"
        app:strokeColor="@color/secondary"
        app:strokeWidth="2dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.HasToGoFragment"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_fridge_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/hasToGoFridge"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items_have_to_go_fridge"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_fridge_items"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/has_to_go_list_item"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Card for shelf -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/items_shelf_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/items_fridge_card"
        app:layout_constraintBottom_toTopOf="@id/items_freezer_card"
        app:strokeColor="@color/secondary"
        app:strokeWidth="2dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.HasToGoFragment"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_shelf_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/hasToGoShelf"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items_have_to_go_shelf"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_shelf_items"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/has_to_go_list_item"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- Card for freezer -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/items_freezer_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/items_shelf_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/secondary"
        app:strokeWidth="2dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.HasToGoFragment"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_freezer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/hasToGoFreezer"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/secondary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_items_have_to_go_freezer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_freezer_items"
                tools:listitem="@layout/has_to_go_list_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>